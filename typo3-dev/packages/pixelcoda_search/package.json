{
    "name": "pixelcoda-search",
    "version": "1.0.0",
    "description": "PixelCoda Search Plugin for TYPO3",
    "main": "Resources/Public/JavaScript/search.js",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint Resources/Public/JavaScript/*.js",
        "lint:fix": "eslint Resources/Public/JavaScript/*.js --fix",
        "build:css": "echo 'CSS already exists, skipping build'",
        "build:js": "echo 'JavaScript already exists, skipping build'",
        "build": "yarn build:css && yarn build:js"
    },
    "keywords": [
        "typo3",
        "search",
        "autocomplete",
        "filter"
    ],
    "author": "PixelCoda",
    "license": "GPL-2.0-or-later",
    "devDependencies": {
        "@babel/core": "^7.23.0",
        "@babel/preset-env": "^7.23.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.50.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-n": "^16.1.0",
        "eslint-plugin-promise": "^6.1.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0"
    },
    "jest": {
        "testEnvironment": "jsdom",
        "testMatch": [
            "**/Tests/JavaScript/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "Resources/Public/JavaScript/**/*.js",
            "!Resources/Public/JavaScript/**/*.min.js"
        ],
        "coverageDirectory": "Tests/JavaScript/coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "jest": true
        },
        "extends": "standard",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "indent": [
                "error",
                4
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ],
            "no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_"
                }
            ],
            "space-before-function-paren": [
                "error",
                {
                    "anonymous": "always",
                    "named": "never",
                    "asyncArrow": "always"
                }
            ]
        }
    }
}