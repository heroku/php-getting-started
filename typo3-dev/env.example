# TYPO3 Development Environment Variables

# TYPO3 Configuration
TYPO3_CONTEXT=Development
TYPO3_INSTALL_DB_DRIVER=mysqli
TYPO3_INSTALL_DB_HOST=db
TYPO3_INSTALL_DB_PORT=3306
TYPO3_INSTALL_DB_DBNAME=db
TYPO3_INSTALL_DB_USER=db
TYPO3_INSTALL_DB_PASSWORD=db

# pixelcoda Search API Configuration
PIXELCODA_API_URL=http://host.docker.internal:8787
PIXELCODA_API_KEY=pc_write_dev_key
PIXELCODA_HMAC_SECRET=dev_hmac_secret_key
PIXELCODA_PROJECT_ID=typo3-dev

# TYPO3-Headless API URL (for webhook refetching)
TYPO3_HEADLESS_URL=https://pixelcoda-typo3-dev.ddev.site/api

# Admin Credentials
TYPO3_ADMIN_USER=admin
TYPO3_ADMIN_PASSWORD=admin

# Development Settings
DEBUG_MODE=true
ENABLE_AUTO_INDEX=true
ENABLE_VECTOR_SEARCH=true
ENABLE_METRICS=true

# Frontend API Configuration (read-only)
PIXELCODA_READ_API_KEY=pc_read_dev_key
