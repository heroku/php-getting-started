# pixelcoda Search Platform - Environment Variables

# Node Environment
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://pixelcoda:pixelcoda_dev@localhost:5432/pixelcoda_search
POSTGRES_PASSWORD=pixelcoda_dev

# Meilisearch Configuration
MEILI_URL=http://localhost:7700
MEILI_MASTER_KEY=pixelcoda_dev_key
MEILI_ENV=development

# Redis Configuration (optional, for future caching/queuing)
REDIS_URL=redis://localhost:6379

# API Configuration
PORT=8787
API_READ_KEY=pc_read_dev_key
API_WRITE_KEY=pc_write_dev_key

# Search Features
ENABLE_VECTOR_SEARCH=true
ENABLE_RERANKING=false
ENABLE_METRICS=true

# Worker Configuration
API_BASE=http://localhost:8787

# TYPO3 Connector Configuration (optional)
TYPO3_API_URL=http://localhost:8787
TYPO3_API_KEY=pc_write_dev_key
TYPO3_HMAC_SECRET=your_hmac_secret_here

# LLM Provider Configuration (choose one)
# OpenAI (Recommended for production)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI (Enterprise)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_azure_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# Local LLM (Ollama - Free, runs locally)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Hugging Face (Cost-effective)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=microsoft/DialoGPT-large
HUGGINGFACE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
